---
import { BindCarouselData } from '@daks.dev/astro.sdk/astro';

const data = Object.values(
  import.meta.glob('@assets/images/gallery/*.(avif|gif|heic|heif|jpeg|jpg|png|tiff|webp)', {
    eager: true,
    import: 'default'
  })
).map((x) => ({ src: x as ImageMetadata }));
---

<BindCarouselData
  client='visible'
  {data}
  transform={{
    width: 320,
    height: 180,
    fit: 'cover',
    quality: 80
  }}
  class:list={[
    'overflow-hidden',
    'rounded-md lg:rounded-lg',
    'shadow-sm shadow-zinc-500 dark:shadow-black'
  ]}
  appear={300}
  duration={20000}
  controls=''
  stream
  invert
/>
