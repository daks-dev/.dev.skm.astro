---
import { getEntry } from 'astro:content';
import { BindCarouselData } from '@daks.dev/astro.sdk/astro';

interface Props {
  class?: ClassValue;
}

const { class: className } = Astro.props;

const data = (await getEntry('gallery', 'default'))?.data.default ?? [];
---

<BindCarouselData
  client='visible'
  {data}
  transform={{
    width: 320,
    height: 180,
    fit: 'cover',
    quality: 80
  }}
  class:list={[
    'overflow-hidden',
    'rounded-md lg:rounded-lg',
    'shadow-sm shadow-zinc-500 dark:shadow-black',
    className
  ]}
  ratio={16 / 9}
  appear={300}
  duration={20000}
  controls=''
  stream
  invert
/>
