---
import { twMerge } from '@daks.dev/astro.sdk';
import type { HTMLAttributes } from 'astro/types';

interface Props extends Omit<HTMLAttributes<'header'>, 'class'> {
  class?: ClassValue;
  tagline?: string;
  center?: boolean;
}

const {
  class: className,
  title,
  tagline = 'Строительная Компания «Масштаб»',
  center,
  ...props
} = Astro.props;
---

<header
  class={twMerge(
    // 'max-bp:px-(--sidebar-panel-width)',
    'mt-20 mb-8 sm:mt-28',
    'flex flex-col gap-1',
    'text-center',
    !center && 'md:text-left',
    className
  )}
  {...props}>
  <slot name='before' />
  <slot>
    <h1
      class='text-2xl leading-normal sm:text-3xl bp:text-4xl'
      set:html={title}
    />
  </slot>
  <slot name='tagline'>
    {
      !Astro.slots.has('default') && (
        <div
          class='text-xs uppercase bp:text-sm'
          set:html={tagline}
        />
      )
    }
  </slot>
  <slot name='after' />
</header>
